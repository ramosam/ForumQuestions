@model List<Question>
@{
    ViewData["Title"] = "Search Results";
}
@{
}
<h1>@ViewData["Title"]</h1>
<br />
<p>Results Found:</p>
<br /><br />
<div class="autoCenterWide">


    @foreach (Question q in Model)
    {

        <table class=" table table-bordered ">
            <tr>
                <th><h5> @q.QuestionHeader</h5></th>
            </tr>
            <tr><td>@q.QuestionBody</td></tr>

            @if (q.Type == "FQ")
            {
                <tr><td>Navigate to the <a href="/Questions/Forum">Forum</a></td></tr>
            } else
            {
                <tr><td>Navigate to the <a href="/Questions/KnowledgeBase">Knowledge Base</a></td></tr>
            }
        </table>

        <br /><br />
    }
</div>