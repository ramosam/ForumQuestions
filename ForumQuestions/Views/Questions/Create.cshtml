@model ForumQuestions.Models.Question

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionHeader" class="control-label"></label>
                <input asp-for="QuestionHeader" class="form-control" />
                <span asp-validation-for="QuestionHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionBody" class="control-label"></label>
                <input asp-for="QuestionBody" class="form-control" />
                <span asp-validation-for="QuestionBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
